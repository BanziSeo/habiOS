{
  "appId": "com.habios.app",
  "productName": "habiOS",
  "directories": {
    "output": "dist-electron",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "dist-electron/main.js",
    "dist-electron/preload.js",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "assets/fonts",
      "to": "fonts",
      "filter": ["**/*"]
    }
  ],
  "asarUnpack": [
    "**/*.node"
  ],
  "mac": {
    "category": "public.app-category.finance",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "icon": "build/icon.ico"
  },
  "win": {
    "target": "nsis",
    "icon": "build/icon.ico"
  },
  "linux": {
    "target": "AppImage",
    "icon": "build"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "artifactName": "${productName}-Setup-${version}.${ext}"
  },
  "npmRebuild": true,
  "nodeGypRebuild": false,
  "publish": {
    "provider": "github",
    "owner": "BanziSeo",
    "repo": "habiOS",
    "releaseType": "release",
    "private": true
  }
}